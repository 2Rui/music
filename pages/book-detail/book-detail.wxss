/* pages/book-detail/book-detail.wxss */
page{
  background:#f5f5f5;
}
.row1{
  width:100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items:center;
  margin-bottom:40rpx;
  padding-top: 40rpx;
}
.duan{
  display: flex;
  flex-direction: column;
  width:100%;
  background:#fff;
}
.duanCont{
  width:100%;
  padding-left:30rpx;
  box-sizing:border-box;
  display: flex;
  flex-wrap:wrap;
}
.num{
  font-size:22rpx;
  margin-left:5px;
  color:#aaa;
}
.duanCont com-tag{
  margin-right:15rpx;
  margin-bottom:10rpx;
}
.duan>text{
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
  align-self: center;
}
.row1-img{
  width: 200rpx;
  height: 260rpx;
  box-shadow:2px 2px 3px #e3e3e3;
}
.row1-title{
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}
.row1-author{
  font-size:20rpx;
  color:#333;
  margin-bottom:20rpx;
}
.jie{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}
.book-info{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}
.jieshao,.info-tilte{
   font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
  align-self: center;
}
.jie-cont{
   text-indent: 58rpx; 
   color:#000000;
   font-weight: 500;
  line-height:30rpx;
  letter-spacing:6rpx;
}
.left{
   color: #999;
   width:100rpx;
   display:inline-block;
  /* //margin-right: 30rpx; */
}