/* components/book/index.wxss */
.book-container{
display:flex;
flex-direction:column;
width:240rpx;
height:360rpx;
box-shadow:2px 2px 3px #e3e3e3;
margin-top:30rpx;
position:relative;
}
.bookbg{
width:100%;
height:100%;
border-radius:2px;
}
.book-info{
display: flex;
flex-direction: column;
width:100%;
background:#fff;
position:absolute;
bottom:0;
font-size:24rpx;
border-bottom-right-radius: 2px;
border-bottom-left-radius: 2px;
padding:5rpx 10rpx 8rpx 15rpx; 
box-sizing: border-box;
}
.title{
  margin-top:10rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.author{
  font-size:20rpx;
  color:#999999;
  margin-top:-5rpx;
  margin-bottom: 10rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.like{
  font-size:20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.num{
color:#666666;
}